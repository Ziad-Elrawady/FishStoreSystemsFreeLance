@model FishStoreSystem.BL.DTO.CustomerDTO

@{
    ViewData["Title"] = "تعديل بيانات الزبون";
}

<h2 class="text-center mb-4">
    <i class="bi bi-pencil-square"></i> تعديل بيانات الزبون
</h2>

<div class="card mx-auto" style="max-width:600px;">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label fw-bold"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CreditLimit" class="form-label fw-bold"></label>
                <input asp-for="CreditLimit" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="CreditLimit" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label fw-bold"></label>
                <select asp-for="Status" class="form-select">
                    <option value="نشط">نشط</option>
                    <option value="غير نشط">غير نشط</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success">
                    💾 حفظ
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
