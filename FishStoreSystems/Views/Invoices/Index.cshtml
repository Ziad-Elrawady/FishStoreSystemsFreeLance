@model IEnumerable<FishStoreSystem.BL.DTO.InvoiceDTO>

@{
    ViewData["Title"] = "قائمة الفواتير";
}

<h2 class="text-center mb-4">📄 قائمة الفواتير</h2>

<a href="/Invoices/Create" class="btn btn-primary mb-3">➕ فاتورة جديدة</a>

<table class="table table-bordered table-striped text-center">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>اسم العميل</th>
            <th>تاريخ الإنشاء</th>
            <th>الاستحقاق</th>
            <th>الإجمالي</th>
            <th>المدفوع</th>
            <th>المتبقي</th>
            <th>الحالة</th>
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="9" class="text-danger fw-bold">لا توجد فواتير</td>
            </tr>
        }
        else
        {
            foreach (var inv in Model)
            {
                var remaining = inv.TotalAmount - inv.PaidAmount;
                <tr>
                    <td>@inv.Id</td>
                    <td>@inv.CustomerName</td>
                    <td>@inv.InvoiceDate.ToString("yyyy-MM-dd")</td>
                    <td>@inv.DueDate.ToString("yyyy-MM-dd")</td>
                    <td>@inv.TotalAmount</td>
                    <td>@inv.PaidAmount</td>
                    <td class="@(remaining > 0 ? "text-danger fw-bold" : "text-success fw-bold")">
                        @remaining
                    </td>
                    <td>
                        @if (remaining > 0)
                        {
                            <span class="badge bg-danger">غير مدفوعة</span>
                        }
                        else
                        {
                            <span class="badge bg-success">مدفوعة</span>
                        }
                    </td>
                    <td>
                        <a href="/Invoices/Details/@inv.Id" class="btn btn-info btn-sm">عرض</a>
                        <a href="/Invoices/Print/@inv.Id" class="btn btn-warning btn-sm" target="_blank">🖨 طباعة</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
