@model FishStoreSystem.ViewModels.DailyReportViewModel
@using System.Globalization
@{
    Layout = null;
    var culture = new CultureInfo("ar-EG");
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>طباعة التقرير اليومي</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f5f7fa;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0,0,0,.08);
        }

        .table thead {
            background: #212529;
            color: #fff;
        }

        .net {
            background: #eaf7ec;
            font-weight: bold;
        }

        @@media print {
            .no-print {
                display: none !important;
            }

        body {
            background: #fff
        }

        .card {
            box-shadow: none
        }

        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="card p-4">

            <h3 class="text-center mb-2">🐟 شهد القنال</h3>
            <p class="text-center text-muted">
                تقرير يومي – @Model.Date.ToString("yyyy-MM-dd")
            </p>

            <table class="table table-bordered text-center mt-4">
                <thead>
                    <tr>
                        <th>صافي اليوم</th>
                        <th>المدفوعات</th>
                        <th>الخوارج</th>
                        <th>المبالغ على الزبائن</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="net">@Model.TotalCash.ToString("C", culture)</td>
                        <td>@Model.PaymentsReceived.ToString("C", culture)</td>
                        <td>@Model.Expenses.ToString("C", culture)</td>
                        <td>@Model.Receivables.ToString("C", culture)</td>
                    </tr>
                </tbody>
            </table>

            <div class="text-center mt-3 text-muted">
                تاريخ الطباعة: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")
            </div>

            <div class="text-center mt-4 no-print">
                <button class="btn btn-success px-4" onclick="window.print()">🖨️ طباعة</button>
                <a href="/Reports/Daily" class="btn btn-secondary px-4">رجوع</a>
            </div>

        </div>
    </div>

</body>
</html>
