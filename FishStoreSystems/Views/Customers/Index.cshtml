@model IEnumerable<FishStoreSystem.BL.DTO.CustomerDTO>
@using System.Globalization

@{
    ViewData["Title"] = "الزبائن";
    var egyptCulture = new CultureInfo("ar-EG");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="mb-0 fw-bold">👥 الزبائن</h3>
        <h4 class="text-muted fw-bold">إدارة حسابات الزبائن</h4>
    </div>

    <a asp-action="Create" class="btn btn-success px-4">
        <i class="bi bi-plus-circle"></i> إضافة زبون
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover align-middle text-center mb-0">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>الاسم</th>
                    <th>الهاتف</th>
                    <th>إجمالي الدين</th>
                    <th>حد التنبيه</th>
                    <th>الحالة</th>
                    <th style="width:180px">إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="py-4 text-muted">
                            لا يوجد زبائن مسجلين
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var c in Model)
                    {
                        var totalDebt = c.TotalDebt;
                        var warningLimit = c.DebtWarningLimit;
                        var isWarning = totalDebt >= warningLimit && warningLimit > 0;

                        <tr class="@(isWarning ? "table-warning" : "")">
                            <td>@c.Id</td>

                            <td class="fw-semibold">@c.Name</td>

                            <td class="text-muted fw-bold">@c.Phone</td>

                            <td>
                                <span class="fw-bold @(totalDebt > 0 ? "text-danger" : "text-success")">
                                    @totalDebt.ToString("C", egyptCulture)
                                </span>
                            </td>

                            <td>
                                <span class="fw-semibold text-muted">
                                    @warningLimit.ToString("C", egyptCulture)
                                </span>

                                @if (isWarning)
                                {
                                    <span class="badge bg-warning text-dark ms-1">
                                        ⚠️
                                    </span>
                                }
                            </td>

                            <td>
                                <span class="badge rounded-pill @(c.Status == "نشط" ? "bg-success" : "bg-secondary") px-3">
                                    @c.Status
                                </span>
                            </td>

                            <td>
                                <div class="table-actions">


                                        <a asp-action="Details"
                                           asp-route-id="@c.Id"
                                           class="btn-action btn-view">
                                            كشف حساب
                                        </a>
                                    

                                    <a asp-action="Edit"
                                       asp-route-id="@c.Id"
                                       class="btn-action btn-edit">
                                        تعديل
                                    </a>

                                </div>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
