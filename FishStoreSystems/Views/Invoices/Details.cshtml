@model FishStoreSystem.BL.DTO.InvoiceDTO

@{
    ViewData["Title"] = "تفاصيل الفاتورة";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold mb-0">🧾 تفاصيل الفاتورة</h3>
    <a href="/Invoices" class="btn btn-secondary">🔙 رجوع</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p><strong>رقم الفاتورة:</strong> @Model.Id</p>
                <p><strong>الزبون:</strong> @Model.CustomerName</p>
                <p><strong>الحالة:</strong> @Model.Status</p>
            </div>
            <div class="col-md-6">
                <p><strong>تاريخ الفاتورة:</strong> @Model.InvoiceDate.ToString("yyyy-MM-dd")</p>
                <p><strong>تاريخ الاستحقاق:</strong> @Model.DueDate.ToString("yyyy-MM-dd")</p>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-md-4"><strong>الإجمالي:</strong> @Model.TotalAmount.ToString("C")</div>
            <div class="col-md-4"><strong>المدفوع:</strong> @Model.PaidAmount.ToString("C")</div>
            <div class="col-md-4 text-danger fw-bold">
                <strong>المتبقي:</strong> @Model.RemainingAmount.ToString("C")
            </div>
        </div>
    </div>
</div>
@if (Model.RemainingAmount > 0)
{
    <div class="card mb-4 border-danger">
        <div class="card-header bg-danger text-white fw-bold">
            💰 إضافة دفعة جديدة
        </div>

        <div class="card-body">
            <form asp-action="AddPayment"
                  asp-controller="Invoices"
                  method="post"
                  class="row g-3 align-items-end">

                <input type="hidden" name="invoiceId" value="@Model.Id" />

                <div class="col-md-4">
                    <label class="form-label fw-bold">المبلغ</label>
                    <input type="number"
                           name="amount"
                           step="0.01"
                           class="form-control"
                           placeholder="أدخل المبلغ"
                           required />
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold">طريقة الدفع</label>
                    <select name="method" class="form-select">
                        <option value="كاش">كاش</option>
                        <option value="فيزا">فيزا</option>
                        <option value="تحويل">تحويل بنكي</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <button type="submit"
                            class="btn btn-success w-100">
                        ➕ إضافة دفعة
                    </button>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-success text-center fw-bold">
        ✅ هذه الفاتورة مدفوعة بالكامل
    </div>
}

