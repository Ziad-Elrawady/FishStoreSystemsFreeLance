@model FishStoreSystem_DAL.Entities.DailySale

@{
    ViewData["Title"] = "حذف";

}

<div class="container mt-5" style="max-width:450px">
    <div class="card shadow">
        <div class="card-header bg-danger text-white text-center fw-bold">
            ⚠️ تأكيد الحذف
        </div>

        <div class="card-body text-center">
            <p>هل أنت متأكد من حذف هذا السجل؟</p>

            <ul class="list-group mb-3 text-start">
                <li class="list-group-item">
                    <strong>التاريخ:</strong> @Model.Date.ToString("yyyy-MM-dd")
                </li>
                <li class="list-group-item">
                    <strong>المبلغ:</strong> @Model.Amount.ToString("C")
                </li>
            </ul>

            <!-- المهم هنا -->
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-center gap-2">
                    <button type="submit" class="btn btn-danger">
                        🗑️ حذف
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        إلغاء
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
