@model FishStoreSystem.BL.DTO.InvoiceDTO
@using System.Globalization

@{
    ViewData["Title"] = "طباعة فاتورة";
    var egyptCulture = new CultureInfo("ar-EG");
}

<div class="container mt-4">

    <div class="text-center mb-4">
        <h3 class="fw-bold">🧾 فاتورة بيع</h3>
        <hr />
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <p><strong>الزبون:</strong> @Model.CustomerName</p>
            <p><strong>رقم الفاتورة:</strong> @Model.Id</p>
        </div>
        <div class="col-md-6 text-md-end">
            <p><strong>تاريخ الفاتورة:</strong> @Model.InvoiceDate.ToShortDateString()</p>
            <p><strong>تاريخ الاستحقاق:</strong> @Model.DueDate.ToShortDateString()</p>
        </div>
    </div>

    <table class="table table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>الصنف</th>
                <th>الكمية</th>
                <th>سعر الوحدة</th>
                <th>الإجمالي</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C", egyptCulture)</td>
                    <td>@item.TotalPrice.ToString("C", egyptCulture)</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row mt-3">
        <div class="col-md-6">
            <p><strong>إجمالي الفاتورة:</strong> @Model.TotalAmount.ToString("C", egyptCulture)</p>
            <p><strong>المدفوع:</strong> @Model.PaidAmount.ToString("C", egyptCulture)</p>
            <p class="fw-bold text-danger">
                <strong>المتبقي:</strong> @Model.RemainingAmount.ToString("C", egyptCulture)
            </p>
        </div>
    </div>

    <div class="text-center mt-4 d-print-none">
        <button onclick="window.print()" class="btn btn-success">
            🖨 طباعة
        </button>
        <a href="/Invoices" class="btn btn-secondary">
            رجوع
        </a>
    </div>
</div>
