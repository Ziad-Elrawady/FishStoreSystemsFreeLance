@model IEnumerable<FishStoreSystem.BL.DTO.CustomerDTO>
@using System.Globalization

@{
    ViewData["Title"] = "الزبائن";
    var egyptCulture = new CultureInfo("ar-EG");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="mb-0 fw-bold">👥 الزبائن</h3>
        <small class="text-muted">إدارة حسابات الزبائن</small>
    </div>

    <a href="/Customers/Create" class="btn btn-success px-4">
        <i class="bi bi-plus-circle"></i> إضافة زبون
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover align-middle text-center mb-0">
            <thead class="table-dark">
                <tr>
                    <th>الاسم</th>
                    <th>الهاتف</th>
                    <th>إجمالي الدين</th>
                    <th>الحالة</th>
                    <th style="width:160px">إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="py-4 text-muted">
                            لا يوجد زبائن مسجلين
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var c in Model)
                    {
                        var totalDebt = c.TotalDebt;

                        <tr>
                            <td class="fw-semibold">@c.Name</td>

                            <td class="text-muted">@c.Phone</td>

                            <td>
                                <span class="fw-bold @(totalDebt > 0 ? "text-danger" : "text-success")">
                                    @totalDebt.ToString("C", egyptCulture)
                                </span>
                            </td>

                            <td>
                                <span class="badge rounded-pill @(c.Status == "نشط" ? "bg-success" : "bg-secondary") px-3">
                                    @c.Status
                                </span>
                            </td>

                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    @if (c.TotalDebt > 0)
                                    {
                                        <a href="/Customers/Details/@c.Id"
                                           class="btn btn-sm btn-info px-3">
                                            كشف حساب
                                        </a>
                                    }

                                    <a href="/Customers/Edit/@c.Id"
                                       class="btn btn-sm btn-warning px-3">
                                        تعديل
                                    </a>
                                </div>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
