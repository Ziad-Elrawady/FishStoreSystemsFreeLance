<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام إدارة شكوك</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Cairo -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Cairo', sans-serif;
        }

        .navbar-nav .nav-link {
            margin-right: 0.5rem;
        }

        .dropdown-menu {
            min-width: 12rem;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">🐟 نظام شكوك الأسماك</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link" href="/Customers/Index">الزبائن</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Invoices/Index">الفواتير</a>
                    </li>

                    <!-- Dropdown للتقارير اليومية -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            التقارير اليومية
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/Reports/Daily">تقرير اليوم</a></li>
                            <li><a class="dropdown-item" href="/DailySales/Index">مبيعات اليوم</a></li>
                            <li><a class="dropdown-item" href="/DailyExpenses/Index">الخوارج اليومية</a></li>
                            <li><a class="dropdown-item" href="/Reports/DailyPrint">طباعة التقرير اليومي</a></li>
                        </ul>
                    </li>

                    <!-- Dropdown للتقارير الأسبوعية -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            التقارير الأسبوعية
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/Reports/Weekly">تقرير الأسبوع</a></li>
                            <li><a class="dropdown-item" href="/Reports/WeeklyArchive">أرشيف الأسبوع</a></li>
                            <li> <a class="nav-link" href="/Reports/WeeklyPrint">طباعة التقرير الأسبوعي</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
