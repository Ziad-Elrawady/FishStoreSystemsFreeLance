@model IEnumerable<FishStoreSystem.BL.DTO.InvoiceDTO>

@{
    ViewData["Title"] = "قائمة الفواتير";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold mb-0">📄 قائمة الفواتير</h3>

    <a href="/Invoices/Create" class="btn btn-success px-4">
         فاتورة جديدة
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover align-middle text-center mb-0">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>اسم العميل</th>
                    <th>تاريخ الإنشاء</th>
                    <th>الاستحقاق</th>
                    <th>الإجمالي</th>
                    <th>المدفوع</th>
                    <th>المتبقي</th>
                    <th>الحالة</th>
                    <th style="width:180px">إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="9" class="py-4 text-muted">
                            لا توجد فواتير
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var inv in Model)
                    {
                        var remaining = inv.TotalAmount - inv.PaidAmount;

                        <tr>
                            <td>@inv.Id</td>
                            <td class="fw-semibold">@inv.CustomerName</td>
                            <td>@inv.InvoiceDate.ToString("yyyy-MM-dd")</td>
                            <td>@inv.DueDate.ToString("yyyy-MM-dd")</td>
                            <td>@inv.TotalAmount</td>
                            <td>@inv.PaidAmount</td>
                            <td class="@(remaining > 0 ? "text-danger fw-bold" : "text-success fw-bold")">
                                @remaining
                            </td>
                            <td>
                                @if (remaining > 0)
                                {
                                    <span class="badge bg-danger">غير مدفوعة</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">مدفوعة</span>
                                }
                            </td>
                            <td>
                                <div class="table-actions">
                                    <a href="/Invoices/Details/@inv.Id"
                                       class="btn-action btn-view">
                                        عرض
                                    </a>
                                    <a href="/Invoices/Print/@inv.Id"
                                       target="_blank"
                                       class="btn-action btn-edit">
                                        طباعة
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
