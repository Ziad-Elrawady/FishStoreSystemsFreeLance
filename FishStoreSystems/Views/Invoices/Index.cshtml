@model IEnumerable<FishStoreSystem.BL.DTO.InvoiceDTO>

@{
    ViewData["Title"] = "قائمة الفواتير";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold mb-0">📄 قائمة الفواتير</h3>

    <a href="/Invoices/Create" class="btn btn-success px-4">
        فاتورة جديدة
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover align-middle text-center mb-0">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>اسم العميل</th>
                    <th>التاريخ</th>
                    <th>الإجمالي</th>
                    <th>المدفوع</th>
                    <th>المتبقي</th>
                    <th>الحالة</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inv in Model)
                {
                    var remaining = inv.TotalAmount - inv.PaidAmount;

                    <tr>
                        <td>@inv.Id</td>
                        <td>@inv.CustomerName</td>
                        <td>@inv.InvoiceDate.ToString("yyyy-MM-dd")</td>
                        <td>@inv.TotalAmount</td>
                        <td>@inv.PaidAmount</td>
                        <td>@remaining</td>
                        <td>
                            <span class="badge @(remaining > 0 ? "bg-danger" : "bg-success")">
                                @(remaining > 0 ? "غير مدفوعة" : "مدفوعة")
                            </span>
                        </td>
                        <td>
                            <a class="btn btn-sm btn-primary"
                               href="/Invoices/Details/@inv.Id">
                                عرض / إضافة دفعة
                            </a>

                            <a class="btn btn-sm btn-secondary"
                               href="/Invoices/Print/@inv.Id"
                               target="_blank">
                                طباعة
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
