@model FishStoreSystem.BL.DTO.InvoiceDTO

@{
    ViewData["Title"] = "تفاصيل الفاتورة";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>🧾 تفاصيل الفاتورة</h3>
    <a href="/Invoices" class="btn btn-secondary">رجوع</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <p><strong>العميل:</strong> @Model.CustomerName</p>
        <p><strong>الإجمالي:</strong> @Model.TotalAmount</p>
        <p><strong>المدفوع:</strong> @Model.PaidAmount</p>
        <p><strong>المتبقي:</strong> @Model.RemainingAmount</p>
    </div>
</div>

<div class="card border-success">
    <div class="card-header bg-success text-white">
        💰 إضافة دفعة
    </div>

    <div class="card-body">
        <form method="post" action="/Invoices/AddPayment">

            @Html.AntiForgeryToken()

            <input type="hidden" name="invoiceId" value="@Model.Id" />

            <div class="mb-3">
                <label>المبلغ</label>
                <input type="number"
                       step="0.01"
                       name="amount"
                       class="form-control"
                       required />
            </div>

            <div class="mb-3">
                <label>طريقة الدفع</label>
                <select name="method" class="form-select">
                    <option value="كاش">كاش</option>
                    <option value="فيزا">فيزا</option>
                    <option value="تحويل">تحويل</option>
                </select>
            </div>

            <button class="btn btn-success w-100">
                إضافة دفعة
            </button>

        </form>
    </div>
</div>
