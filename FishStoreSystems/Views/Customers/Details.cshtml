@model FishStoreSystem.ViewModels.CustomerDetailsViewModel
@using System.Globalization
@{
    ViewData["Title"] = "كشف حساب";
    var egyptCulture = new CultureInfo("ar-EG");
}

<!-- ===== PAGE HEADER ===== -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold mb-0">
        <i class="bi bi-graph-up"></i>
        كشف حساب: <span class="bi bi-graph-up">@Model.Customer.Name</span>
    </h3>

    <a href="/Customers" class="btn btn-secondary">
        🔙 العودة
    </a>
</div>

@if (!Model.OpenInvoices.Any())
{
    <!-- EMPTY STATE -->
    <div class="card text-center p-5">
        <div class="card-body">
            <i class="bi bi-check-circle text-success fs-1"></i>
            <h5 class="mt-3">لا توجد فواتير مفتوحة</h5>
            <p class="text-muted mb-0">
                هذا العميل لا يوجد عليه أي مبالغ مستحقة حالياً
            </p>
        </div>
    </div>
}
else
{
    @foreach (var inv in Model.OpenInvoices)
    {
        <div class="card mb-4">

            <!-- ===== INVOICE HEADER ===== -->
            <div class="card-header bg-warning fw-bold d-flex justify-content-between align-items-center">
                <span>
                    فاتورة #@inv.Id
                </span>
                <span class="text-muted">
                    @inv.InvoiceDate.ToShortDateString()
                </span>
            </div>

            <!-- ===== CARD BODY ===== -->
            <div class="card-body">

                <!-- TOTALS -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="fw-semibold">
                            الإجمالي:
                            <span class="text-dark">
                                @inv.TotalAmount.ToString("C", egyptCulture)
                            </span>
                        </div>
                    </div>

                    <div class="col-md-6 text-md-end">
                        <div class="fw-semibold">
                            المتبقي:
                            <span class="text-danger">
                                @inv.RemainingAmount.ToString("C", egyptCulture)
                            </span>
                        </div>
                    </div>
                </div>

                <hr />

                <!-- ITEMS -->
                <h6 class="fw-bold mb-2">الأصناف</h6>
                <ul class="list-group mb-3">
                    @foreach (var item in inv.Items)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                @item.ItemName — @item.Quantity × @item.UnitPrice
                            </span>
                            <strong>
                                @item.TotalPrice.ToString("C", egyptCulture)
                            </strong>
                        </li>
                    }
                </ul>

                <!-- ADD PAYMENT -->
                <form asp-controller="Invoices"
                      asp-action="AddPayment"
                      method="post"
                      class="row g-2 align-items-end">

                    <input type="hidden" name="invoiceId" value="@inv.Id" />

                    <div class="col-md-4">
                        <label class="form-label fw-semibold">مبلغ الدفع</label>
                        <input name="amount"
                               type="number"
                               step="0.01"
                               class="form-control"
                               placeholder="أدخل المبلغ"
                               required />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-semibold">طريقة الدفع</label>
                        <select name="method" class="form-select">
                            <option value="كاش">كاش</option>
                            <option value="فيزا">فيزا</option>
                            <option value="تحويل">تحويل بنكي</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <button type="submit" class="btn btn-success w-100">
                            ➕ إضافة دفعة
                        </button>
                    </div>
                </form>

                <!-- PAYMENTS HISTORY -->
                @if (inv.Payments.Any())
                {
                    <hr />
                    <h6 class="fw-bold mt-3">المدفوعات السابقة</h6>

                    <ul class="list-group">
                        @foreach (var p in inv.Payments)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    @p.PaymentDate.ToShortDateString()
                                    <span class="text-muted">(@p.PaymentMethod)</span>
                                </span>
                                <strong class="text-success">
                                    @p.Amount.ToString("C", egyptCulture)
                                </strong>
                            </li>
                        }
                    </ul>
                }

            </div>
        </div>
    }
}

