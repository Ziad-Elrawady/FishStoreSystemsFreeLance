<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام إدارة شكوك</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet">

    <!-- Cairo Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Site CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>

    <!-- ================= NAVBAR ================= -->
    <nav class="navbar navbar-expand-lg creative-navbar fixed-top">
        <div class="container">

            <!-- Brand -->
            <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                <span class="logo-circle">🐟</span>
                <div class="brand-text">
                    <span class="brand-name">شهد القنال</span>
                    <small class="brand-sub">إدارة حسابات الزبائن</small>
                </div>
            </a>

            <!-- Toggle -->
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menu -->
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav mx-auto gap-2">

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Customers" ? "active" : "")"
                           href="/Customers">الزبائن</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Invoices" ? "active" : "")"
                           href="/Invoices">الفواتير</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            التقرير اليومي
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Reports/Daily">عرض التقرير</a></li>
                            <li><a class="dropdown-item" href="/DailySales">مبيعات اليوم</a></li>
                            <li><a class="dropdown-item" href="/DailyExpenses">الخوارج</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            التقرير الأسبوعي
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Reports/Weekly">عرض التقرير</a></li>
                            <li><a class="dropdown-item" href="/Reports/WeeklyArchive">الأرشيف</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- ================= CONTENT ================= -->
    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
