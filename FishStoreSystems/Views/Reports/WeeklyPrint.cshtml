@model FishStoreSystems.ViewModels.WeeklyReportViewModel
@using System.Globalization
@{
    Layout = null;
    var culture = new CultureInfo("ar-EG");
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>طباعة التقرير الأسبوعي</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f5f7fa;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0,0,0,.08);
        }

        .table thead {
            background: #212529;
            color: #fff;
        }

        .total {
            background: #f1f1f1;
            font-weight: bold
        }

        @@media print {
            .no-print {
                display: none !important;
            }

        body {
            background: #fff
        }

        .card {
            box-shadow: none
        }

        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="card p-4">

            <h3 class="text-center mb-2">📊 التقرير الأسبوعي</h3>
            <p class="text-center text-muted">
                من @Model.StartDate.ToString("yyyy-MM-dd")
                إلى @Model.EndDate.ToString("yyyy-MM-dd")
            </p>

            <table class="table table-bordered text-center mt-4">
                <thead>
                    <tr>
                        <th>التاريخ</th>
                        <th>صافي اليوم</th>
                        <th>المدفوعات</th>
                        <th>الخوارج</th>
                        <th>المبالغ على الزبائن</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.Items.OrderBy(x => x.Date))
                    {
                        <tr>
                            <td>@d.Date.ToString("yyyy-MM-dd")</td>
                            <td class="text-success fw-bold">@d.NetProfit.ToString("C", culture)</td>
                            <td>@d.PaymentsReceived.ToString("C", culture)</td>
                            <td class="text-danger">@d.Expenses.ToString("C", culture)</td>
                            <td>@d.Receivables.ToString("C", culture)</td>
                        </tr>
                    }
                    <tr class="total">
                        <td>الإجمالي</td>
                        <td>@Model.Items.Sum(x => x.NetProfit).ToString("C", culture)</td>
                        <td>@Model.Items.Sum(x => x.PaymentsReceived).ToString("C", culture)</td>
                        <td>@Model.Items.Sum(x => x.Expenses).ToString("C", culture)</td>
                        <td>@Model.Items.Sum(x => x.Receivables).ToString("C", culture)</td>
                    </tr>
                </tbody>
            </table>

            <div class="text-center mt-3 text-muted">
                تاريخ الطباعة: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")
            </div>

            <div class="text-center mt-4 no-print">
                <button class="btn btn-success px-4" onclick="window.print()">🖨️ طباعة</button>
                <a href="/Reports/WeeklyArchive" class="btn btn-secondary px-4">رجوع</a>
            </div>

        </div>
    </div>

</body>
</html>
