@model FishStoreSystem.BL.DTO.CustomerDTO

@{
    ViewData["Title"] = "إضافة عميل جديد";
}

<h2 class="text-center mb-4">
    <i class="bi bi-person-plus"></i> إضافة عميل جديد
</h2>

<div class="card mx-auto" style="max-width:600px;">
    <div class="card-body">
        <form asp-action="Create" method="post">

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label fw-bold"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CreditLimit" class="form-label fw-bold"></label>
                <input asp-for="CreditLimit" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="CreditLimit" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label fw-bold"></label>
                <select asp-for="Status" class="form-select">
                    <option value="نشط">نشط</option>
                    <option value="غير نشط">غير نشط</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success">
                    💾 حفظ
                </button>
                <a href="/Customers" class="btn btn-secondary">
                    إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
